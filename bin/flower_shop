#!/usr/bin/env ruby
# flower_shop

# 0.0.2
# 20160926

BUNDLE_DEFINITIONS = {
  'R12' => {10 => 12.99, 5 => 6.99},
  'L09' => {9 => 24.95, 6 => 16.95, 3 => 9.95},
  'T58' => {9 => 16.99, 5 => 9.95, 3 => 5.95},
}

def bundler(quantity, bundle_definition, bundles)
  bundle_definition ||= BUNDLE_DEFINITIONS[code].dup
  divisor = bundle_definition.keys.max
  bundle_definition.delete(divisor)
  if quantity >= divisor
    result, remainder = quantity.divmod(divisor)
    bundles[result] = divisor
    bundler(remainder, code, bundle_definition, bundles)
  elsif quantity.zero?
    return bundles
  else
    return
  end
end

def order_maker(order)
  order.each do |line_item|
    quantity, code = line_item.split
    quantity = quantity.to_i
    p bundles = bundler(quantity, bundle_definition[code], {})
  end
end

def main
  order = []
  until (input = gets) == "\n"
    order << input.strip
  end
  order_maker(order)
end

main
